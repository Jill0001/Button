<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_background"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left|top"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#797979"
            android:src="@drawable/text"
            android:elevation="4dp"
          />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="用户名" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="17dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到"
            android:textSize="13dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:textSize="13dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="120dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作业"
            android:textSize="13dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="210dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="300dp"
            android:text="纽扣"
            android:textColor="@color/white"
            android:textSize="13dp" />


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

    <LinearLayout style="@style/wrap_layout">

        <LinearLayout
            android:id="@+id/renzheng"
            style="@style/single_layout">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user_crown"
                />
            <TextView
                style="@style/usertext"
                android:text="  我的账号身份"
                android:layout_width="1dp" />
            <TextView
                android:id="@+id/renzhengxx"
                style="@style/usertext"
                android:textColor="#999999"
                android:text="未认证" />

            <ImageView style="@style/img_arrow" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/mynotice">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user_comment"
                />
            <TextView
                style="@style/usertext"
                android:text="  我发布的" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <!-- 分割线 -->
        <View style="@style/bg_line"/>
        <!-- 无圆角-->
        <LinearLayout style="@style/mid_layout"
            android:id="@+id/shoucang">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user_collection"
                />
            <TextView
                style="@style/usertext"
                android:text="  我的收藏" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>
        <View style="@style/bg_line"/>
        <!-- 下圆角-->
        <LinearLayout style="@style/bottom_layout"
            android:id="@+id/myteam">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/user_circle"
                />
            <TextView style="@style/usertext"
                android:text="  我的圈子" />

            <ImageView style="@style/img_arrow"/>
        </LinearLayout>


    </LinearLayout>


            <LinearLayout style="@style/wrap_layout">

                <LinearLayout
                    android:id="@+id/settings"

                    style="@style/single_layout">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_read"
                        />
                    <TextView
                        style="@style/usertext"
                        android:text="  浏览历史" />

                    <ImageView style="@style/img_arrow" />
                </LinearLayout>

                <View style="@style/bg_line"/>
                <!-- 下圆角-->
                <LinearLayout style="@style/bottom_layout"

                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/user_circle"
                        />
                    <TextView style="@style/usertext"
                        android:text="  xxxxxxxx" />

                    <ImageView style="@style/img_arrow"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>