<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.button.notice.Button.buttonLogin">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="110dp"
                android:elevation="4dp"
                android:layout_height="110dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="80dp"
                />








            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:elevation="5dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_write"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="纽扣通知"
                    android:textSize="18dp"
                    android:textColor="#333333"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/UserId"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:digits="1234567890."

                    android:inputType="textPersonName"
                    android:hint=" 学号"

                    android:layout_weight="0.70" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/UserKey"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:digits="1234567890."

                        android:hint=" 密码"
                        android:inputType="textPassword" />

                    <!--<ImageButton-->
                        <!--android:id="@+id/imageButton"-->
                        <!--android:onClick="mimas"-->
                        <!--android:scaleType="centerInside"-->
                        <!--android:layout_width="20dip"-->
                        <!--android:layout_height="20dip"-->
                        <!--android:layout_gravity="center|right"-->
                        <!--android:layout_marginBottom="2dp"-->
                        <!--android:background="@color/touming"-->
                        <!--app:srcCompat="@drawable/ic_lock_outline" />-->

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center|bottom"
                android:elevation="5dp"
                android:layout_height="wrap_content">

                <Button

                    android:id="@+id/login"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="160dp"
                    android:background="@drawable/shape_blue_buttom"
                    android:text="登录"
                    android:elevation="5dp"

                    android:textColor="@color/white" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/beijing1" />


        </FrameLayout>






    </LinearLayout>




